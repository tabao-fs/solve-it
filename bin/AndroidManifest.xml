<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flashcards.solveit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait" >
        <activity
            android:name="com.flashcards.solveit.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.flashcards.solveit.Categories"
            android:label="@string/title_activity_categories" >
        </activity>
        <activity
            android:name="com.flashcards.solveit.Gameplay"
            android:label="@string/title_activity_gameplay" >
        </activity>
        <activity
            android:name="com.flashcards.solveit.Scoreboard"
            android:label="@string/title_activity_high_score" >
        </activity>
        <activity
            android:name="com.flashcards.solveit.ShowAnswer"
            android:label="@string/title_activity_show_answer" >
        </activity>
    </application>

</manifest>
